import TimeLineElement from "../components/cv/TimeLine.astro";

const certificados = [
  { name: "CyberSecurity Essentials", file: "/certificados/Cybersecurity_Essentials_certificate_8119110132-utchetumal-edu-mx_56ab7203-baf4-444d-8d88-3520b82a9131.pdf", color: "green" },
  { name: "CCNA: Enterprise Networking, Security, and Automation", file: "/certificados/CCNA-_Enterprise_Networking-_Security-_and_Automation_certificate_8119110132-utchetumal-edu-mx_476953f5-c455-42da-8b24-f9d47c0bb1ad.pdf", color: "green" },
  { name: "Introduction to CyberSecurity", file: "/certificados/Introduction_to_Cybersecurity_certificate_8119110132-utchetumal-edu-mx_6fefaf86-849c-4573-b7dd-8a55e10f0649.pdf", color: "purple" },
