  { name: "CCNAv7: Introduction to Networks", file: "/certificados/CCNA-_Introduction_to_Networks_certificate_8119110132-utchetumal-edu-mx_df375e56-a9dd-4612-8fc5-8fb6e5abdd7b.pdf", color: "green" }
